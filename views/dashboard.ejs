    <div id="test1" class="vacancy container">
        <div class="section">
            <div class="card table-title">YOUR APPLICATIONS</div>
            <table class="card responsive-table bordered centered">
                <thead>
                <tr ng-show="applications.length == 0">
                    <td class="center">
                        <p>You haven't submitted any applications yet.</p>
                    </td>
                </tr>
                <tr ng-show="applications.length > 0" class="center">
                    <th>Designation</th>
                    <th>Basis</th>
                    <th>Last Date</th>
                    <th></th>
                </tr>
                </thead>
                <tbody ng-show="applications.length > 0">
                <tr ng-repeat="app in applications">
                    <td>
                        <p>
                            {{ app.vacancy_details.designation }}
                        </p>
                    </td>
                    <td class="grey-text">{{ app.vacancy_details.basis }}</td>
                    <td class="grey-text">{{ app.vacancy_details.end_date }}</td>
                    <td>
                        <a style=
                           "-webkit-border-radius: 0;
                           -moz-border-radius: 0;
                           border-radius: 0;

                            "
                           ng-click="selectvc(app.vacancy_details)"
                           ng-class="{disabled:(app.vacancy_details.vacancy_status!='1')}"
                           class="btn waves-effect waves-teal">VIEW</a>

                        <a style=
                           "-webkit-border-radius: 0;
                           -moz-border-radius: 0;
                           border-radius: 0;

                            "
                           ng-click="selectvc(app.vacancy_details)"
                           ng-class="{disabled:(app.vacancy_details.vacancy_status!='1')}"
                           class="btn waves-effect waves-teal">EDIT</a>

                        <a style=
                           "-webkit-border-radius: 0;
                           -moz-border-radius: 0;
                           border-radius: 0;

                            "
                           ng-click="selectvc(app.vacancy_details)"
                           ng-class="{disabled:(app.vacancy_details.vacancy_status!='1')}"
                           class="btn waves-effect waves-teal">PRINT</a>
                    </td>
                </tr>

                </tbody>
            </table>
        </div>

        <div class="section">
            <div class="card table-title">VACANCIES OPEN</div>
            <table class="card responsive-table bordered centered">
                <thead>
                <tr class="center">
                    <th>Designation</th>
                    <th>Basis</th>
                    <th>Last Date</th>
                    <th>Status</th>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="vacancy in vacancies">
                    <td>
                        <p>
                            {{ vacancy.designation }}
                        </p>
                    </td>
                    <td class="grey-text">{{ vacancy.basis }}</td>
                    <td class="grey-text">{{ vacancy.end_date }}</td>
                    <td>
                        <a style=
                           "-webkit-border-radius: 0;
                           -moz-border-radius: 0;
                           border-radius: 0;

                            "
                                ng-click="selectvc(vacancy)"
                           ng-class="{disabled:(vacancy.vacancy_status!='1')}"
                                class="btn waves-effect waves-teal">APPLY NOW</a>
                    </td>
                </tr>

                </tbody>
            </table>
        </div>
    </div>


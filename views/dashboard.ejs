            <ul class="tabs">
                <li class="tab"><a id="dash" class="active" href="#test1">DASHBOARD</a></li>
                <li class="tab"><a class="" id="info" href="#test2">INFORMATION</a></li>
                <li  class="tab"><a id="apply" class="hide" href="#test3">APPLICATION</a></li>
              <% if (site.role == 'USER') { %>  <li class="tab"><a id="vacancies" class=""  href="#test4">VACANCIES</a></li> <% } %>

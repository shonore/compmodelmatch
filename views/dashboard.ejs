                            </div>
                            <div  class="ss-item-required input-field col s6">
                                <input class="validate" id="datepicker" type="text" placeholder="Address" class="" ng-model="candidate.cand_ref2_address">

                            </div>
                        </div>

                    </div>
                    <div ng-show="selected==7"  class="container">

                        <div class="row">
                            <div class="ss-item-required input-field col s12">
                                <input class="validate" id="extras" placeholder="Any Other Additonal Details" type="text" class="" ng-model="candidate.cand_extras">
                            </div>
                        </div>


                    </div>
                    </form>
                    <br>
                    <div class="container" ng-show="selected==8">
                        <% include upload.ejs %>
                    </div>

                </div>
            </div>
